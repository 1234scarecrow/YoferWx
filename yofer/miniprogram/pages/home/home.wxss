/* 分类 */
.classify{
  display: flex;
  justify-content: space-evenly;
  font-size: 35rpx;
  margin: 20rpx 0;
  color: #31354a;
}
.active{
  color: #282e49;
  font-size: 40rpx;
  border-bottom: 5rpx solid rgba(215,52,52,0.75);
}

